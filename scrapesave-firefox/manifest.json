{

  "manifest_version": 2,
  "name": "ScrapeSave",
  "version": "0.0.1",

  "description": "Collate and save multi-page web content such as blogs, webcomics, serials and more.",

  "icons": {
    "20":"icons/icon.svg"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/icon.svg",
    "default_title": "ScrapeSave"
  },

  "background": {
    "scripts": ["scripts/background_script.js"]
  },

  "web_accessible_resources": [
    "scripts/sidebar.html",
    "scripts/sidebar_style.html",
    "scripts/page_style.html",
    "icons/open-iconic/svg/*.svg"
  ]

}